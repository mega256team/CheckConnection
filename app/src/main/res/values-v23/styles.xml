<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeLightStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="NavDrawerTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/iran_yekan_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/c505050</item>
    </style>

    <!--=========================================================================================-->

    <style name="AppThemeDarkStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>