<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/switchThumbOn" />
            <stroke android:color="@color/switchTrackOn" android:width="4dp"/>
            <size android:height="32dp" android:width="32dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/switchThumbOff" />
            <stroke android:color="@color/switchTrackOff" android:width="4dp"/>
            <size android:height="32dp" android:width="32dp"/>
        </shape>
    </item>

</selector>